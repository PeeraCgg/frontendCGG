generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
id Int @id() @default(autoincrement())
name String
user String
pass String
status String @default("use")

}

model Otp {
  id         Int       @id @default(autoincrement())
  email      String
  otp        String
  createdAt  DateTime  @default(now())
  expiresAt  DateTime

  usermain   Usermain? @relation(fields: [email], references: [email]) // Relation to Usermain based on email
}

model Usermain {
  id        Int         @id @default(autoincrement())
  name      String
  surname   String
  mobile    String      @unique
  birthdate DateTime
  email     String      @unique
  pdpa      CheckPDPA?

  otps      Otp[]       // List of OTPs associated with this user by email
  @@unique([mobile, email]) 
}

model CheckPDPA {
  id        Int      @id @default(autoincrement())
  checkbox1 Boolean
  checkbox2 Boolean
  createdAt DateTime @default(now())
  userId    Int      @unique
  user      Usermain @relation(fields: [userId], references: [id])
}

