generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
id Int @id() @default(autoincrement())
name String
user String
pass String
status String @default("use")

}

model Usermain {
  id        Int         @id @default(autoincrement())
  name      String
  surname   String
  mobile    String      @unique
  birthdate DateTime
  email     String

  pdpa      CheckPDPA?
}

model CheckPDPA {
  id        Int      @id @default(autoincrement())
  checkbox1 Boolean
  checkbox2 Boolean
  createdAt DateTime @default(now())
  userId    Int      @unique
  user      Usermain @relation(fields: [userId], references: [id])
}

